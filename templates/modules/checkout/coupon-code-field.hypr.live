<div class="form-group">
	<div class="col-sm-4">
	    <label for="coupon-code">{{ labels.couponCode }}: </label>
	</div>
	<div class="col-sm-8">
	    <input type="text" id="coupon-code" name="coupon-code" value="{{ model.couponCode }}" class="form-control" data-mz-value="couponCode" maxlength="{{themeSettings.couponCodeLength}}">
	    <button class="mz-button" data-mz-action="addCoupon" {% if not model.couponCode %} disabled="disabled" {% endif %}>{{ labels.apply }}</button>
	</div>
</div>