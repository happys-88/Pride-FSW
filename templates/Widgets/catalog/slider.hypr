                    {% endif %}
                    {% if model.config.addBtnTitleTwo %}
                        <button>{{ model.config.addBtnTitleTwo }}</button>
                    {% endif %}
                </div>
            </div>
        {% endif %}

        {% if model.config.slideImageThree %}
            <div class="slide">
                <a  class="mz-slide" style="background-image: url('{{ model.config.slideImageThree.imageUrl }}');" {% if model.config.slideLinkThree %}href="{{ model.config.slideLinkThree }}"{% endif %}></a>
                <div class="mz-slide-details">
                    {% if model.config.slideTitleThree %}
