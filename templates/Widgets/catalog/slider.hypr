<div id="mz-home-slider">
    <div class="slider">
        {% if model.config.slideImageOne %}
            <div class="slide">
                <a  class="mz-slide" style="background-image: url('{{ model.config.slideImageOne.imageUrl }}');" {% if model.config.slideLinkOne %}href="{{ model.config.slideLinkOne }}"{% endif %}></a>
                <div class="mz-slide-details">
                    {% if model.config.slideTitleOne %}
                        <h4>{{ model.config.slideTitleOne }}</h4>
                    {% endif %}
                    {% if model.config.slideTitleMainHeadingOne %}
                        <h3 class="mz-slider-main-title">{{ model.config.slideTitleMainHeadingOne }}</h3>
                    {% endif %}
                    {% if model.config.slideShortDescOne %}
                        <h3>{{ model.config.slideShortDescOne }}</h3>
                    {% endif %}
                    {% if model.config.addBtnTitleOne %}
                        <button>{{ model.config.addBtnTitleOne }}</button>
                    {% endif %}
                </div>
            </div>
        {% endif %}

        {% if model.config.slideImageTwo %}
            <div class="slide">
